root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,vb}]
indent_size = 4
trim_trailing_whitespace = true

[*.cs]
csharp_new_line_before_open_brace = methods

[*.css]
indent_size = 2

[*.cshtml]
indent_size = 2

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.scss]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
