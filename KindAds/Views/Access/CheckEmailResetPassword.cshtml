@{
  ViewBag.Title = "Check Email For Reset Password";
  Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
@section Head {
  @Styles.Render("~/Content/kaUI_pages.css")
}

<div class="sign content-wrapper" ">
  <section class="hero bg-pattern">
    <div class="container-fluid">
      <div class="row info">
        <div class="col-12">
          <h1>
            Check Email For Account Activation
          </h1>
        </div>
      </div>
    </div>
  </section>
  <section class="form-layout">
    <div class="container-fluid">
      <div class="row">
        <div class="sign-wrapper extended">
          <div class="content">
            @using (Html.BeginForm("Login", "Access", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
              @Html.AntiForgeryToken()
              <article class="form-data container-fluid">
                <form>
                  <fieldset>
                    <div class="form-container">
                      <div class="row">
                        <div class="col-12 form-group">
                          <h3>
                            You will receive a email with a link to change your password.
                          </h3>
                          <p>
                            Check your email and Sign In.
                          </p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-12 form-group">
                          <input type="submit" class="btn btn-primary btn-lg" value="Sign in" />
                        </div>
                      </div>
                    </div>
                  </fieldset>
                </form>
              </article>
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

@section Scripts {
}
