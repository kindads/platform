
@using (Html.BeginForm("SetCulture", null, FormMethod.Post, new { @id = "formLanguages" }))
{
  @Html.DropDownList("LanguagesList", new SelectList(string.Empty, "Value", "Text"), "Please select", new { @class = "form-control" })
}

@Html.Hidden("hideCultureSel", KindAds.Helpers.CultureHelper.GetCultureSel(KindAds.Helpers.CultureHelper.GetCurrentNeutralCulture()))
@Html.Hidden("hideControllerName", @ViewContext.RouteData.Values["Controller"].ToString())
@Html.Hidden("hideActionName", @ViewContext.RouteData.Values["Action"].ToString())

