<!DOCTYPE html>
<html lang="@KindAds.Helpers.CultureHelper.GetCurrentNeutralCulture()" dir="@(KindAds.Helpers.CultureHelper.IsRighToLeft() ? "rtl" : "ltr")">
<head>
  <!--LandingLayout-->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>@ViewBag.Title | Kind Ads</title>
  <link rel="shortcut icon" href="../favicon.ico">
  <link rel="apple-touch-icon" href="../Img/favicon/apple-icon-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../Img/favicon/apple-icon-144x144.png">
  <link rel="icon" type="image/png" sizes="144x144" href="../Img/favicon/android-icon-144x144.png">
  <link rel="icon" type="image/png" sizes="16x16" href="../Img/favicon/favicon-16x16.png">
  <meta name="application-name" content="&amp;amp;nbsp;">
  <meta name="msapplication-TileColor" content="#FFFFFF">
  <meta name="msapplication-TileImage" content="../Img/favicon/ms-icon-144x144.png">
  @Styles.Render("~/Content/vendor/bootstrap.min.css")
  @Styles.Render("~/Content/tkatUI.css")
  <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <div class="wrapper" role="main" id="top">
    <div class="main-content">
      <div class="flexbox home">
        @RenderBody()
        <section class="footer">
          <div class="row">
            <div class="col-sm-3">
              <img class="logo img-responsive" data-no-retina="true" src="~/Img/UI/logo-full-white@2x.png" alt="KindAds Logo" />
            </div>
            <div class="col-sm-9">
              <div class="row">
                <div class="col-sm-3">
                  <h4>COMPANY</h4>
                  <ul>
                    <li>
                      <a href="~/Team">Team</a>
                    </li>
                    <li>
                      <a target="_blank" href="~/Content/kind-ads-whitepaper.pdf">White Paper</a>
                    </li>
                  </ul>
                </div>
                <div class="col-sm-3">
                  <h4>RESOURCES</h4>
                  <ul>
                    <li>
                      <a class="disabled">Quick help</a>
                    </li>
                    <li>
                      <a href="~/Faq">FAQ</a>
                    </li>
                  </ul>
                </div>
                <div class="col-sm-3">
                  <h4>INTEGRATIONS</h4>
                  <ul>
                    <li>
                      <a href="https://subscribers.com" target="_blank">Subscribers</a>
                    </li>
                    <li>
                      <a href="https://mailchimp.com" target="_blank">Mailchimp</a>
                    </li>
                  </ul>
                </div>
                <div class="col-sm-3">
                  <h4>CONTACT</h4>
                  <ul>
                    <li>
                      <a class="disabled" mailto="hello@kindads.io">hello@kindads.io</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </section>
        <div class="footer legals">
          Copyright &#169; 2018 The Leadchain Foundation. All rights reserved.
        </div>
      </div>
    </div>
  </div>

  <script>document.write('<base href=" ' + document.location + ' " />')</script>
  <script src="https://ajax.microsoft.com/ajax/jquery/jquery-1.9.1.min.js"></script>
  <script>
    if (typeof jQuery == 'undefined') {
      document.write(unescape("%3Cscript src='../Scripts/Vendor/jquery/jquery.min.js' type='text/javascript'%3E%3C/script%3E"));
    }
  </script>

  @*<script src="@Url.Content("~/Scripts/vendor/bootstrap/bootstrap.min.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
  @Scripts.Render("~/bundles/basejs")
  @RenderSection("Scripts", required: false)
  <!-- GTA -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-114897255-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-114897255-1');
  </script>

  <!-- GA -->
  <script>
    (function (i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-114655123-1', 'auto');
    ga('send', 'pageview');
  </script>
  <script type="text/javascript">
    (function (d, t) {
      if (window.location.hash != '#gleam' && ('' + document.cookie).match(/(^|;)\s*GleamsBOGX=X($|;)/)) { return; }
      var g = d.createElement(t), s = d.getElementsByTagName(t)[0];
      g.src = "https://js.gleam.io/sBOGX/ol.js"; s.parentNode.insertBefore(g, s);
    }(document, "script"));
  </script>
</body>
</html>
