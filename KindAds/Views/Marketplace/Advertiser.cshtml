@model KindAds.Negocio.ViewModels.KindAdsV2.MarketplaceViewModel

@{
  ViewBag.Title = "Advertiser";
  Layout = "~/Views/Shared/_MarketplacePubLayout.cshtml";
  var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@section Head {
  @Styles.Render("~/Content/kaUI_marketplace.css")
}

<div class="container-fluid">
  <div class="row" style="display:none;">
    <div class="col-12">
      <h1>Welcome Advertiser to Kind Ads</h1>
      <div class="white-block">
        <div class="heading">
          <h2>You don't have completed your profile</h2>
        </div>
        <div class="body-content">
          <p>Get started by completing your profile.</p>
          @Html.ActionLink("Set up your profile", "CreateProfile", "AdvertiserProfile", null, new { @class = "btn btn-primary btn-lg" })
        </div>
      </div>
    </div>
  </div>

  <div class="partialContents" data-url="/@culture/Marketplace/GetMarketplaceChannelsAdvertiser">
    <img src="~/Img/Loader/loading.white.gif" /> Loading Publishers...
  </div>
</div>



@section Scripts {
  <!-- Marketplace Slider -->
  <script src="~/Scripts/slick/slick.min.js"></script>

  <!-- Subscribe Section -->
  <script type="text/javascript">
    //$('.link-dashboard').addClass('active');

  </script>

  <script>
    var site = site || {};
    site.baseUrl = site.baseUrl || "";
    $(document).ready(function (e) {
      $(".partialContents").each(function (index, item) {
        var url = site.baseUrl + $(item).data("url");
        if (url && url.length > 0) {
          $(item).load(url);
        }
      });
    });
  </script>
}
