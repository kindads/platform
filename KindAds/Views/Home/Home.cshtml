  <section class="register">
    <form id="subscribeFormUp" method="get" action="">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <h2>@Resource.Language.Home.Home.Resources.RegisterTitle</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-10 col-offset-1">
