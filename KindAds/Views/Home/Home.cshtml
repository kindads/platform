                <div class="form-group col-9">
                  <input id="emailSubscribeUp" type="email" class="form-control" placeholder="@Resource.Language.Home.Home.Resources.RegisterEmailPlaceholder" required />
                </div>
                <div class="form-group col-3">
                  <input id="btnSubscribeUp" type="submit" class="btn" value="@Resource.Language.Home.Home.Resources.RegisterMainBtn">
