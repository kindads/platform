<div class="modal modal-white fade" id="RejectModal" role="dialog" aria-labelledby="RejectModal" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">
          <label id="lblTitle"></label>
        </h2>
      </div>
      <div class="modal-body">
        <div class="panel">
          <div class="panel-body">
            <div>
              <label>Reject proposal</label>
              <div>
                <label>Let <span id="rejectUserName"></span> know why you are rejecting this proposal below</label>
                <label>Message</label>
                <textarea required id="rejectMessage"></textarea>

             
                <div class="btn-stack">
                  <button type="button" class="btn btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Cancel</span>
                  </button>
                  
                  <button type="button" class="btn" aria-label="Close" onclick="SendForm(false);" >
                    <span aria-hidden="true">Reject</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>

