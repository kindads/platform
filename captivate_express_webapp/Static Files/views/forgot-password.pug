extends ./templates/defaultBase.pug


block headTitle
  title Recover password | Kind Ads System


block bodyWrapper
  .main-content
    .flexbox.sign
      section.flexbox-item.spaced.form
        .title
          .logo-mobile
            a(href='index.html')
              img(src='../Img/UI/logo-white.png')
          h1 Recover password

        article.form-data()
          form
            fieldset
              .row
                .col-xs-9.col-xs-offset-2.form-group
                  p Please enter your email address. You will receive a link to create a new password.
              .row
                .col-sm-12.form-group.simple(style='margin-bottom: 50%')
                  i.kas.kas-email
                  label.label(id='password') Email
                  input.form-control.clean(type='email' id='email' placeholder='EMAIL' autofocus)


              .form-group.padding
                button.btn.btn-default.btn-rounded.btn-lg(type='submit') Reset password


      section.flexbox-item.info
        include ./partials/partial-login.pug


