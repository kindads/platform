extends ./templates/defaultBase.pug


block headTitle
  title Create an Account | Kind Ads System


block bodyWrapper
  .main-content
    .flexbox.sign
      section.flexbox-item.spaced.form
        .title
          .logo-mobile
            a(href='index.html')
              img(src='../Img/UI/logo-white.png')
          h1 Create an Account

        article.form-data()
          form
            fieldset
              .row
                .col-sm-12.form-group.simple
                  i.kas.kas-icon-name
                  label.label(id='email') Name
                  input.form-control.clean(type='text' id='name' placeholder='NAME' autofocus)
              .row
                .col-sm-12.form-group.simple
                  i.kas.kas-icon-email
                  label.label(id='password') Email
                  input.form-control.clean(type='email' id='email' placeholder='EMAIL')
              .row
                .col-sm-12.form-group.simple
                  i.kas.kas-icon-password
                  label.label(id='password') Password
                  input.form-control.clean(type='password' id='password' placeholder='PASSWORD')
              .row
                .col-sm-12.form-group.simple
                  label.label(id='password') Role
                  select.form-control.clean
                    option Publisher
                    option Advertiser

              .form-group.padding
                .checkbox
                  label(id='eula')
                    | Agree&nbsp;
                    a.link(href='terms.html' target='_blank') Terms of Service
                    | &nbsp;and&nbsp;
                    a.link(href='privacy.html' target='_blank') Privacy policy
                    input(type='checkbox' id='eula' name='check')
                    .control_indicator

              .form-group.padding
                button.btn.btn-default.btn-rounded.btn-lg(type='submit') Create

              .form-group.padding
                ul.last
                  li
                    span Already have an account
                  li
                    a(href='sign-in.html') SIGN IN

      section.flexbox-item.info
        include ./partials/partial-login.pug
