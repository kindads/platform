@model captivate_express_webapp.Models.Advertiser.CreateCampaingModel
@{
    var displayDataChannelMC = ViewBag.IsChannelMailChimp ? "display:inline" : "display:none";
    var displayDataChannelPN = ViewBag.IsChannelSuscribers || ViewBag.IsChannelPushCrew ? "display:inline" : "display:none";
    var displayDataChannelCM = ViewBag.IsChannelCampaignMonitor ? "display:inline" : "display:none";
    var displayDataChannelAW = ViewBag.IsChannelAweber ? "display:inline" : "display:none";
    var displayDataChannelSG = ViewBag.IsChannelSendGrid ? "display:inline" : "display:none";
    var displayDataChannelGR = ViewBag.IsChannelGetResponse ? "display:inline" : "display:none";
    var srcImage = Model.Image != null ? Model.Image : "";
}
<div class="row">
  <div class="col-md-3 form-group text-right">
    @Html.LabelFor(model => model.TitleText)
  </div>
  <div class="col-md-9 form-group">
    <strong>@Model.TitleText</strong>
  </div>
</div>
<div class="row">
  <div class="col-md-3 form-group text-right">
    @Html.LabelFor(model => model.MessageText)
  </div>
  <div class="col-md-9 form-group">
    <strong>@Html.Raw(@Model.MessageText)</strong>
  </div>
</div>

<div class="pnlCampaignDataPushNotifications" style="@displayDataChannelPN">
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.UrlText, "URL")
    </div>
    <div class="col-md-9 form-group">
      <strong>@Session["ProtocolSelecc"]  @Model.UrlText</strong>
    </div>
  </div>

  @if (ViewBag.NeedsUTM)
  {
    <div class="row">
      <div class="col-md-3 form-group text-right">
        @Html.LabelFor(model => model.UTM_Source)
      </div>
      <div class="col-md-9 form-group">
        <strong>@Model.UTM_Source</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 form-group text-right">
        @Html.LabelFor(model => model.UTM_Medium)
      </div>
      <div class="col-md-9 form-group">
        <strong>@Model.UTM_Medium</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 form-group text-right">
        @Html.LabelFor(model => model.UTM_Campaign)
      </div>
      <div class="col-md-9 form-group">
        <strong>@Model.UTM_Campaign</strong>
      </div>
    </div>
  }
  <div class="form-group">
    <div class="card-img">
      <img class="img-responsive" src=@srcImage />
    </div>
    <br />
  </div>
</div>

<div id="pnlCampaignDataMailChimp" style="@displayDataChannelMC">
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.SubjectMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.SubjectMC</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.FromNameMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.FromNameMC</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.FromEmailMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.FromEmailMC</strong>
    </div>
  </div>
</div>

<div id="pnlCampaignDataCampaignMonitor" style="@displayDataChannelCM">
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.SubjectMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.SubjectMC</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.FromNameMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.FromNameMC</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.FromEmailMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.FromEmailMC</strong>
    </div>
  </div>
</div>

<div id="pnlCampaignDataAweber" style="@displayDataChannelAW">
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.SubjectMC)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.SubjectMC</strong>
    </div>
  </div>
</div>
<div id="pnlCampaignDataAweber" style="@displayDataChannelSG">
  <div class="row">
    <div class="col-md-3 form-group text-right">
      @Html.LabelFor(model => model.Subject)
    </div>
    <div class="col-md-9 form-group">
      <strong>@Model.Subject</strong>
    </div>
  </div>
</div>
<div id="pnlCampaignDataGetResponse" style="@displayDataChannelGR">
<div class="row">
  <div class="col-md-3 form-group text-right">
    @Html.LabelFor(model => model.Subject)
  </div>
  <div class="col-md-9 form-group">
    <strong>@Model.Subject</strong>
  </div>
</div>
</div>
