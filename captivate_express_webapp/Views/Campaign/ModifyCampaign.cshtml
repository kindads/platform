        </div>

        <div class="body-content">
          <div class="row">
            <div class="col-md-6">

              @using (Html.BeginForm("ModifyCampaign", "Campaign", null, FormMethod.Post, new { @id = "formModifyCampaign" }))
              {
                @Html.Partial("_CampaignData", Model)

