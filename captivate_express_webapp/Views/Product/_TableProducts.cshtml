@model Captivate.Comun.Models.ViewModel.ProductViewModel

@{
  var grid = new WebGrid(rowsPerPage: Model.PageSize);
  grid.Bind(Model.ListProducts, autoSortAndPage: false, rowCount: Model.TotalRecord);
}

@grid.GetHtml(
    tableStyle: "table datagrid",
    columns: grid.Columns(
grid.Column(columnName: "ShortDescription", header: "Name", canSort: true),
grid.Column(columnName: "SITE.Name", header: "Site", canSort: true),
grid.Column(columnName: "PARTNER.Name", header: "Provider", canSort: true),
grid.Column(columnName:"",header: "Delete", format: (item) => Html.ActionLink("Delete","Delete", "Product", new { Id = item.IdProduct },null) )
))

