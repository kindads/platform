    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="new-header row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="header">
      <nav>
        <a href="@Url.Action("Home", "Access")">
          <img class="pull-left img-responsive" src="../Img/UI/logo.png" />
        </a>
        <ul class="pull-right">

          <li>
            <a href="/Access/Login">Sign In</a>
          </li>
          <li>
            <a href="/Access/CreateAccount">Sign Up</a>
          </li>
        </ul>
