
@{
  ViewBag.Title = "Check Email For Account Activation";
  Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="title">
  <div class="logo-mobile">
    <a href="@Url.Action("Home", "Access")">
      <img src="../Img/UI/Logo-White.png">
    </a>
  </div>
  <h1>Check Email For Account Activation</h1>
</div>

@using (Html.BeginForm("Login", "Access", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
  @Html.AntiForgeryToken()
  <article class="form-data container-fluid">
    <form>
      <fieldset>
        <div class="row">
          <div class="col-xs-9 col-xs-offset-2 form-group">
            <p>
              Please check your email address.
              <br /><br />
              You will receive a link to create a new password.
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 form-group simple">
            <div class="text-center">
              <input type="submit" class="btn btn-default btn-rounded btn-lg" value="@Resources.GO_TO_LOGIN" />
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </article>

  <div class="col sm-12">
    <ul class="last clearfix">
      <li>

      </li>
    </ul>
  </div>
}
